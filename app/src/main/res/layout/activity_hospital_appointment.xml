<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/log">

    <TextView
        android:id="@+id/tVqueue"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Queue no"
        android:layout_marginLeft="56dp"
        android:layout_marginStart="56dp"
        android:layout_alignBaseline="@+id/textView12"
        android:layout_alignBottom="@+id/textView12"
        android:layout_toRightOf="@+id/textView12"
        android:layout_toEndOf="@+id/textView12" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="94dp"
        android:text="Queue No:"
        android:textStyle="bold"
        android:layout_marginLeft="56dp"
        android:layout_marginStart="56dp"
        android:layout_below="@+id/tVdname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tVdname"
        android:layout_width="match_parent"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="Doctor's Name"
        android:layout_marginTop="34dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/bqadd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add In Queue"
        android:textSize="20dp"
        android:layout_marginTop="88dp"
        android:background="@drawable/buttonhos"
        android:layout_below="@+id/tVqueue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/badel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reduce the Queue"
        android:textSize="20dp"
        android:background="@drawable/buttonhos"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/bqadd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>