<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2"
    android:background="@mipmap/profile1"
    android:layout_margin="2dp">

    <TextView
        android:id="@+id/textchange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_marginBottom="34dp"
        android:layout_above="@+id/eToldpass"
        android:layout_alignRight="@+id/eToldpass"
        android:layout_alignEnd="@+id/eToldpass"
        android:textColor="@color/heading"/>

    <EditText
        android:id="@+id/eToldpass"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Old Password"
        android:layout_gravity="center_horizontal"
        android:inputType="textPassword"
        android:layout_width="250dp"
        android:layout_marginBottom="26dp"
        android:layout_above="@+id/eTnewpass1"
        android:layout_alignLeft="@+id/eTnewpass1"
        android:layout_alignStart="@+id/eTnewpass1" />

    <EditText
        android:id="@+id/eTnewpass1"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="New Password"
        android:layout_gravity="center_horizontal"
        android:inputType="textPassword"
        android:layout_width="250dp"
        android:layout_above="@+id/eTnewpass2"
        android:layout_alignLeft="@+id/eTnewpass2"
        android:layout_alignStart="@+id/eTnewpass2"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/eTnewpass2"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_gravity="center_horizontal"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:layout_marginBottom="23dp"
        android:layout_width="250dp"
        android:layout_weight="0.08"
        android:layout_above="@+id/btchange"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btchange"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Change Password"
        android:layout_marginBottom="95dp"
        android:background="@drawable/buttonhos"
        android:textSize="18dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/eTnewpass2"
        android:layout_alignEnd="@+id/eTnewpass2" />


</RelativeLayout>
